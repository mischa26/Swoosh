<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_screen_bg"
    tools:context="mischa.arcillas.com.swoosh.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/swoosh_logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/firstText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go All In"
        android:textAllCaps="true"
        android:textSize="45sp"
        android:layout_below="@+id/imageView"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/secondText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="on going all out"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:layout_below="@id/firstText"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/thirdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find a team in your city and dominate the league"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:layout_below="@id/secondText"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/firstBtn"
        android:background="@drawable/button_border"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="get started"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:onClick="goToActivity2"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
